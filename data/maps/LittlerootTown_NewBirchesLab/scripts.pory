mapscripts LittlerootTown_NewBirchsLab_MapScripts {
    MAP_SCRIPT_ON_TRANSITION: LittlerootTown_NewBirchsLab_EventScript_BallDefault
}
 
script LittlerootTown_NewBirchsLab_EventScript_BallDefault{
    setvar(VAR_STARTER_REGION, 0)
}
 
script LittlerootTown_NewBirchsLab_EventScript_Birch{
    if(!(flag(STARTER_BALL_ONE) || flag(STARTER_BALL_TWO) || flag(STARTER_BALL_THREE))){
        lockall
        faceplayer
        message("Hello, would you like to see more?")
        multichoice(25, 5, MULTI_STARTER_CHOICE,0)
        closemessage
        if(var(VAR_RESULT) == 0) {
            call(StarterFade)
            setvar(VAR_STARTER_REGION, 2)
        }
        elif (var(VAR_RESULT) == 1) {
            call(StarterFade)
            setvar(VAR_STARTER_REGION, 1)
        }
        elif (var(VAR_RESULT) == 2) {
            call(StarterFade)
            setvar(VAR_STARTER_REGION, 0)
        }
        msgbox("Choose wisely...")
        waitmessage
        releaseall
    }
    else{
        msgbox("Take care of your Pokemon", MSGBOX_NPC)
    }
    end
}
 
script StarterFade {
    fadescreen(FADE_TO_BLACK)
    delay(20)
    fadescreen(FADE_FROM_BLACK)
    return
}

script LittlerootTown_NewBirchsLab_EventScript_PokeballOne{
    lockall
    if(!(flag(STARTER_BALL_ONE) || flag(STARTER_BALL_TWO) || flag(STARTER_BALL_THREE))){
        if(var(VAR_STARTER_REGION) == 0){
            call(LittlerootTown_NewBirchsLab_EventScript_Mudkip)
        }
        elif(var(VAR_STARTER_REGION) == 1){
            call(LittlerootTown_NewBirchsLab_EventScript_Totodile)
        }
        elif(var(VAR_STARTER_REGION) == 2){
            call(LittlerootTown_NewBirchsLab_EventScript_Squirtle)
        }
    }
    else{
        msgbox("Don't Take Another")
    }
    waitmessage
    releaseall
    end
}
 
